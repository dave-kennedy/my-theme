<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

        <title>{% if meta.title %}{{ meta.title }} | {% endif %}{{ site_title }}</title>

        {% if meta.description %}
            <meta name="description" content="{{ meta.description|striptags }}" />
        {% endif %}

        {% if meta.robots %}
            <meta name="robots" content="{{ meta.robots }}" />
        {% endif %}

        {% if current_page %}
            <link rel="canonical" href="{{ current_page.url }}" />
        {% endif %}

        <link rel="stylesheet" href="{{ theme_url }}/css/normalize.css" type="text/css" />
        <link rel="stylesheet" href="{{ theme_url }}/css/skeletor.css" type="text/css" />
        <link rel="stylesheet" href="{{ theme_url }}/css/style.css" type="text/css" />
    </head>
    <body>
        <div class="container">
            <div>
                <h1>
                    <a href="{{ "index"|link }}">{{ site_title }}</a>
                </h1>
            </div>

            <div>
                <h2>{{ meta.title }}</h2>
                {{ content }}
            </div>

            <div>
                <p>
                    Made with <a href="http://picocms.org/">Pico</a>
                </p>
            </div>
        </div>
    </body>
</html>

