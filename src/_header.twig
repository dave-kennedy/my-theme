<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

        <title>{% if meta.title %}{{ meta.title }} | {% endif %}{{ site_title }}</title>

        {% if meta.description %}
            <meta name="description" content="{{ meta.description|striptags }}" />
        {% endif %}

        {% if meta.robots %}
            <meta name="robots" content="{{ meta.robots }}" />
        {% endif %}

        {% if current_page %}
            <link rel="canonical" href="{{ current_page.url }}" />
        {% endif %}

        <link rel="stylesheet" href="{{ theme_url }}/css/normalize.css" type="text/css" />
        <link rel="stylesheet" href="{{ theme_url }}/css/style.css" type="text/css" />
    </head>

    <body>
        <div class="container">
            <div>
                <h1>
                    <a href="{{ 'index' | link }}">{{ site_title }}</a>
                </h1>
            </div>

            {% set nav_links = pages['_navigation'].meta.links %}

            {% if nav_links %}
                <nav>
                    {% for page_title, page_id in pages['_navigation'].meta.links %}
                        <a class="mr-1" href="{{ base_url }}/{{ page_id }}">{{ page_title }}</a>
                    {% endfor %}
                </nav>
            {% endif %}

